@model EtnoSelo.App.Models.PretragaKlijenataModel

<div class="panel panel-primary">
    <div class="panel-heading">Pretraga Klijenata</div>
    <div class="panel-body">
        @using (Html.BeginForm("Pretraga", "PregledKlijenata"))
        {
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.ImePrezime, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.ImePrezime, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ImePrezime, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-1">
                        <input type="submit" value="Pretrazi" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Klijenti.FirstOrDefault().Ime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Klijenti.FirstOrDefault().Prezime)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Klijenti)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prezime)
                    </td>
                    <td>
                        @Html.ActionLink("Detalji", "Detalji", new { klijentId = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>