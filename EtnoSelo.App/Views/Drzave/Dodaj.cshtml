@model EtnoSelo.App.Models.DrzavaDodajVM
@{
    ViewBag.Title = "Dodaj";
}

<h2>Dodaj</h2>

@using (Html.BeginForm("Dodaj"))
{

    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">

            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Naziv)
                @Html.TextBoxFor(x => x.Naziv, new { @class = "form-control", placeholder = "Naziv države" })
                @Html.ValidationMessageFor(x => x.Naziv)
            </div>

        </div>

    </div>
        <div class="row">
            <div class="col-sm-12">
                <input type="submit" value="Snimi" class="btn btn-success" />

                @Html.ActionLink("Odustani", "Index", null, new { @class = "btn btn-danger", style = "margin-left:40px" })
            </div>


        </div>
    
}
